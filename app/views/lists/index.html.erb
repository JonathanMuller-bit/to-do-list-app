

<table class='table table-bordered table-hover'>

  <tbody>
    <% @lists.each do |list| %>
    <% if list.completed %>
      <tr class='table-secondary'>
        <td class='completed'><%= link_to list.description, edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% else %>
      <tr>
        <td><%= link_to list.description, edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

